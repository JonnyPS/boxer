{
  "manifest_version": 2,

  "name": "Getting started example",
  "description": "This extension shows a Google Image search result for the current page",
  "version": "1.0",

  "browser_action": {
    "default_icon": "off.png",
      "default_title": "icon"

    // "default_popup": "popup.html"
  },
  "background": {
   "scripts": ["bg.js"] 
  },
   "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      // "css": ["mystyles.css"],
      "js": ["jquery.js", "contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "http://*/*", "https://*/*"
  ]
}